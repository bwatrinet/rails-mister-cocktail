<div class="row justify-content-center flex-wrap" >
  <h1><strong>üç∏ <%= @cocktail.name.capitalize %>üç∏</strong> </h1>
</div>
<br>

<div class="container">
  <div class="row justify-content-around " style="padding:20px">
    <div class="col-sm-4" data-aos="flip-left">
      <img id="zoom" class="img-fluid shadow p-1 bg-info rounded" src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=986&q=80" width="350px">
    </div>
    <br>
    <div class="col-sm-8" style="padding:20px 0px 0px 20px">
      <h5> <strong>Description :</strong> <%= @cocktail.description %></h5>
      <br>
        <% if @cocktail.doses.empty? %>
          <button class="btn btn-info btn-xs"> <%=link_to 'Add ingredient', new_cocktail_dose_path(@cocktail)%> <i class="fas fa-plus-circle"></i>
          </button>
        <% else %>
          <h5> <strong>Ingredients : </strong></h5>
          <% @cocktail.doses.each do |dose| %>

            <ul>
              <li>
                <h6> <%= dose.ingredient.name %> ( <%=dose.quantity%> <%=dose.unit%> )
                <%=link_to dose_path(dose.id), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fas fa-trash-alt"></i>
              </li>
              <% end %></h6>
            </ul>
            <% end %>
            <ul>
              <button class="btn btn-info btn-xs"> <%=link_to 'Add ingredient', new_cocktail_dose_path(@cocktail)%> <i class="fas fa-plus-circle"></i>
              </button>
            </ul>
        <% end %>
    <br>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <button class="btn btn-warning btn-lg" style="margin:5px"> <%=link_to 'Edit cocktail', edit_cocktail_path(@cocktail)%> </button>
  <button class="btn btn-dark btn-lg" style="margin:5px"> <%=link_to 'Back to list', cocktails_path%> </button>
</div>
