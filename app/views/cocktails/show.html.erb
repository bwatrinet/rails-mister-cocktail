<hr>
  <div class="container">
    <div class="row justify-content-center">
      <img src="https://source.unsplash.com/user/arobj/800x400" style="border-radius:5px" style="box-shadow: 10px">
    </div>
    <br>
    <div class="row justify-content-center" >
      <h1><strong>🍸 <%= @cocktail.name.capitalize %>🍸</strong> </h1>
    </div>
    <div class="row justify-content-center" >
      <h5> <strong>Description :</strong> <%= @cocktail.description %></h5>
    </div>
    <div class="row justify-content-center" >
      <h5> <strong>Ingredients : </strong>
        <% @cocktail.doses.each do |dose| %>
        <%= dose.ingredient.name %> <%= dose.quantity %> <%= dose.unit %>
      <% end %></h5>
    </div>
    <div class="row justify-content-center">
      <button class="btn btn-info" style="margin:10px"> <%=link_to 'Add ingredient', new_cocktail_dose_path(@cocktail)%> </button>
      <button class="btn btn-dark" style="margin:10px"> <%=link_to 'Back to list', cocktails_path%> </button>
    </div>
  </div>
</hr>
