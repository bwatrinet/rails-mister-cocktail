<br>
<br>
<div class="row justify-content-center" >
  <h1><strong>üç∏ <%= @cocktail.name.capitalize %>üç∏</strong> </h1>
</div>
<br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4">
      <div data-aos="flip-left">
        <img id="zoom" class="shadow p-1 bg-info rounded" src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=986&q=80" width="350px">
      </div>
    </div>
    <div class="col-sm-4">
      <div data-aos="flip-left">
        <img id="zoom" class="shadow p-1 bg-info rounded" src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=986&q=80" width="350px">
      </div>
    </div>
    <div class="col-sm-4">
      <div data-aos="flip-left">
        <img id="zoom" class="shadow p-1 bg-info rounded" src="https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=986&q=80" width="350px">
      </div>
    </div>
  </div>
  <br>

  <div class="container">
    <div class="row justify-content-center" >
      <div class="col-sm-8">
        <h5> <strong>Description :</strong> <%= @cocktail.description %></h5>
      <br>
      </div>
      <div class="col-sm-4">
        <h5> <strong>Ingredients : </strong></h5>
        <% @cocktail.doses.each do |dose| %>
          <ul>
            <li>
              <%= dose.ingredient.name %> <%=dose.quantity%><%=dose.unit%>
              <%=link_to dose_path(dose.id), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fas fa-trash-alt"></i>
              <% end %>
            </li>
          </ul>
        <% end %>
      <br>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <button class="btn btn-warning" style="margin:10px"> <%=link_to 'Edit cocktail', edit_cocktail_path(@cocktail)%> </button>
    <button class="btn btn-info" style="margin:10px"> <%=link_to 'Add ingredient', new_cocktail_dose_path(@cocktail)%> </button>
    <button class="btn btn-dark" style="margin:10px"> <%=link_to 'Back to list', cocktails_path%> </button>
  </div>
  <br>
  <br>
</div>

